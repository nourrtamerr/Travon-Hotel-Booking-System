        padding: 25px 30px;
        border-radius: 8px;
        margin-bottom: 30px;
    }

    .page-title {
        margin: 0;
        font-size: 24px;
        font-weight: 500;
    }

    .search-section {
        margin-bottom: 30px;
    }

    .search-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .search-title {
        color: #1a374d;
        font-size: 18px;
        margin: 0 0 20px 0;
    }

    .search-forms {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .search-form {
        display: flex;
        gap: 10px;
    }

    .input-group {
        position: relative;
        flex: 1;
    }

    .input-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
    }

    .search-input {
        width: 100%;
        padding: 12px 12px 12px 40px;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        font-size: 14px;
    }

    .search-btn {
        background: #1a374d;
        color: white;
        border: none;
        padding: 0 20px;
        border-radius: 6px;
        font-size: 14px;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s;
    }

        .search-btn:hover {
            background: #142c3c;
        }

    .data-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    .th-content {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 16px 20px;
    }

    .th-icon {
        color: #1a374d;
    }

    .data-table th {
        background: #f8f9fa;
        color: #1a374d;
        font-weight: 600;
        text-align: left;
        border-bottom: 2px solid #dee2e6;
    }

    .data-table td {
        padding: 16px 20px;
        border-bottom: 1px solid #dee2e6;
    }

    .promo-code {
        font-family: monospace;
        font-weight: 600;
        color: #1a374d;
        background: #e9ecef;
        padding: 4px 8px;
        border-radius: 4px;
    }

    .action-links {
        margin-top: 20px;
        display: flex;
        gap: 15px;
    }

    .action-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: #f8f9fa;
        color: #1a374d;
        text-decoration: none;
        border-radius: 6px;
        font-size: 14px;
        transition: all 0.3s;
    }

        .action-link:hover {
            background: #e2e6ea;
            transform: translateY(-1px);
        }
</style>