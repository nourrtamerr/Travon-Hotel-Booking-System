@model MVCBookingFinal_YARAB_.Models.PromoCode

@{
    // Layout = null;
}

<div class="page-wrapper">
    <div class="delete-container">
        <div class="header-section">
            <div class="warning-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h1 class="page-title">Delete Promo Code</h1>
            <p class="warning-text">Are you sure you want to delete this promo code? This action cannot be undone.</p>
        </div>

        <div class="promo-details">
            <div class="promo-card">
                <div class="promo-header">
                    <span class="promo-label">Code</span>
                    <span class="promo-code">@Model.Code</span>
                </div>
                
                <div class="details-grid">
                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-toggle-on"></i>
                            Status
                        </span>
                        <span class="status-badge @(Model.IsActive ? "active" : "inactive")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-calendar"></i>
                            Expiry Date
                        </span>
                        <span>@Model.ExpiryDate.ToString("MMM dd, yyyy")</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-percentage"></i>
                            Discount
                        </span>
                        <span class="discount">@Model.Discount%</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-user"></i>
                            Added By
                        </span>
                        <span>@Model.AddingUser.Id</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="button-group">
                    <a asp-action="Index" class="btn-cancel">Cancel</a>
                    <button type="submit" class="btn-delete">Delete Promo Code</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .page-wrapper {
        display: flex;
        justify-content: center;
        align-items: start;
        min-height: 100vh;
        padding: 40px 20px;
        background: #f8f9fa;
    }

    .delete-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        padding: 30px;
    }

    .header-section {
        text-align: center;
        margin-bottom: 30px;
    }

    .warning-icon {
        color: #dc3545;
        font-size: 48px;
        margin-bottom: 20px;
    }

    .page-title {
        color: #1a374d;
        font-size: 24px;
        margin: 0 0 10px 0;
    }

    .warning-text {
        color: #6c757d;
        font-size: 16px;
        margin: 0;
    }

    .promo-details {
        margin: 30px 0;
    }

    .promo-card {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
    }

    .promo-header {
        text-align: center;
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 1px solid #dee2e6;
    }

    .promo-label {
        display: block;
        color: #6c757d;
        font-size: 14px;
        margin-bottom: 5px;
    }

    .promo-code {
        font-size: 24px;
        font-weight: 600;
        color: #1a374d;
        font-family: monospace;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .detail-label {
        color: #6c757d;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 500;
        display: inline-block;
    }

    .status-badge.active {
        background: #28a745;
        color: white;
    }

    .status-badge.inactive {
        background: #dc3545;
        color: white;
    }

    .discount {
        font-weight: 600;
        color: #1a374d;
    }

    .button-group {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        margin-top: 20px;
    }

    .btn-cancel, .btn-delete {
        padding: 12px 24px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-cancel {
        background: #f8f9fa;
        color: #1a374d;
        border: 1px solid #dee2e6;
        text-decoration: none;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
        border: none;
    }

    .btn-cancel:hover {
        background: #e2e6ea;
    }

    .btn-delete:hover {
        background: #c82333;
    }
</style>
