@model MVCBookingFinal_YARAB_.Models.PromoCode

@{
    Layout = "_AdminHome";
}

<style>
    .page-wrapper {
        display: flex;
        justify-content: center;
        align-items: start;
        min-height: 100vh;
        padding: 40px 20px;
        background: #f8f9fa;
    }

    .details-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 700px;
        padding: 30px;
    }

    .header-section {
        text-align: center;
        margin-bottom: 30px;
    }

    .header-icon {
        color: #1a374d;
        font-size: 48px;
        margin-bottom: 20px;
    }

    .page-title {
        color: #1a374d;
        font-size: 24px;
        margin: 0;
    }

    .promo-details {
        margin: 30px 0;
    }

    .promo-card {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 30px;
    }

    .promo-header {
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid #dee2e6;
    }

    .promo-label {
        display: block;
        color: #6c757d;
        font-size: 14px;
        margin-bottom: 5px;
    }

    .promo-code {
        font-size: 28px;
        font-weight: 600;
        color: #1a374d;
        font-family: monospace;
        letter-spacing: 1px;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 25px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .detail-icon {
        width: 40px;
        height: 40px;
        background: #e9ecef;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #1a374d;
        font-size: 18px;
    }

    .detail-content {
        flex: 1;
    }

    .detail-label {
        display: block;
        color: #6c757d;
        font-size: 13px;
        margin-bottom: 4px;
    }

    .detail-value {
        color: #1a374d;
        font-size: 15px;
        font-weight: 500;
    }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 500;
        display: inline-block;
    }

        .status-badge.active {
            background: #28a745;
            color: white;
        }

        .status-badge.inactive {
            background: #dc3545;
            color: white;
        }

    .discount {
        color: #28a745;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        margin-top: 30px;
    }

    .btn-primary, .btn-secondary {
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s;
    }

    .btn-primary {
        background: #1a374d;
        color: white;
    }

    .btn-secondary {
        background: #f8f9fa;
        color: #1a374d;
        border: 1px solid #dee2e6;
    }

    .btn-primary:hover {
        background: #142c3c;
    }

    .btn-secondary:hover {
        background: #e2e6ea;
    }
</style>


<div class="page-wrapper">
    <div class="details-container">
        <div class="header-section">
            <div class="header-icon">
                <i class="fas fa-ticket-alt"></i>
            </div>
            <h1 class="page-title">Promo Code Details</h1>
        </div>

        <div class="promo-details">
            <div class="promo-card">
                <div class="promo-header">
                    <span class="promo-label">Promo Code</span>
                    <span class="promo-code">@Model.Code</span>
                </div>

                <div class="details-grid">
                    <div class="detail-item">
                        <div class="detail-icon">
                            <i class="fas fa-toggle-on"></i>
                        </div>
                        <div class="detail-content">
                            <span class="detail-label">Status</span>
                            <span class="status-badge @(Model.IsActive ? "active" : "inactive")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-icon">
                            <i class="fas fa-calendar"></i>
                        </div>
                        <div class="detail-content">
                            <span class="detail-label">Expiry Date</span>
                            <span class="detail-value">@Model.ExpiryDate.ToString("MMMM dd, yyyy")</span>
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-icon">
                            <i class="fas fa-percentage"></i>
                        </div>
                        <div class="detail-content">
                            <span class="detail-label">Discount</span>
                            <span class="detail-value discount">@Model.Discount%</span>
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="detail-content">
                            <span class="detail-label">Added By</span>
                            <span class="detail-value">@Model.AddingUser.FirstName</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="action-buttons">

            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-primary">
                <i class="fas fa-edit"></i>
                Edit
            </a>

            <a asp-action="Index" class="btn-secondary">
                <i class="fas fa-arrow-left"></i>
                Back to List
            </a>
            

        </div>
    </div>
</div>

