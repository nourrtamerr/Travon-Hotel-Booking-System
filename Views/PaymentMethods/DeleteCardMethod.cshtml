@model MVCBookingFinal_YARAB_.Models.CardPaymentMethod

@{
    ViewData["Title"] = "DeleteCardMethod";
}

<style>
    .page-wrapper {
        display: flex;
        justify-content: center;
        align-items: start;
        min-height: 100vh;
        padding: 40px 20px;
        background: #f8f9fa;
    }

    .delete-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        padding: 30px;
    }

    .header-section {
        text-align: center;
        margin-bottom: 30px;
    }

    .warning-icon {
        color: #dc3545;
        font-size: 48px;
        margin-bottom: 20px;
    }

    .page-title {
        color: #1a374d;
        font-size: 24px;
        margin: 0 0 10px 0;
    }

    .page-subtitle {
        color: #6c757d;
        font-size: 16px;
        margin: 0;
    }

    .card-preview {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
    }

    .card-icon {
        color: #1a374d;
        font-size: 32px;
    }

    .info-group {
        margin-bottom: 15px;
    }

        .info-group label {
            display: block;
            color: #6c757d;
            font-size: 13px;
            margin-bottom: 5px;
        }

        .info-group p {
            margin: 0;
            color: #1a374d;
            font-size: 16px;
        }

    .card-number {
        font-family: monospace;
        letter-spacing: 1px;
    }

    .info-row {
        display: flex;
        gap: 30px;
    }

    .warning-message {
        background: #fff3cd;
        border: 1px solid #ffeeba;
        color: #856404;
        padding: 15px;
        border-radius: 6px;
        margin-bottom: 30px;
        font-size: 14px;
    }

    .button-group {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
    }

    .btn-cancel, .btn-delete {
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        cursor: pointer;
        border: none;
    }

    .btn-cancel {
        background: #f8f9fa;
        color: #1a374d;
        border: 1px solid #dee2e6;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
    }

    .btn-cancel:hover {
        background: #e2e6ea;
    }

    .btn-delete:hover {
        background: #c82333;
    }
</style>

<div class="page-wrapper">
    <div class="delete-container">
        <div class="header-section">
            <div class="header-content">
                <div class="warning-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h1 class="page-title">Delete Card</h1>
                <p class="page-subtitle">Are you sure you want to delete this card?</p>
            </div>
        </div>

        <div class="card-preview">
            <div class="card-icon">
                <i class="fas fa-credit-card"></i>
            </div>
            <div class="card-info">
                <div class="info-group">
                    <label>Card Number</label>
                    <p class="card-number">•••• •••• •••• @Model.CardNumber.Substring(Math.Max(0, Model.CardNumber.Length - 4))</p>
                </div>
                <div class="info-row">
                    <div class="info-group">
                        <label>Expiry Date</label>
                        <p>@Model.ExpiryDate.ToString("MM/yyyy")</p>
                    </div>
                    <div class="info-group">
                        <label>Type</label>
                        <p>@Model.PaymentType</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="warning-message">
            <p>This action cannot be undone. The card will be permanently removed from your account.</p>
        </div>

        <div class="action-buttons">
            <form asp-action="DeleteCardMethod" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="button-group">
                    <a asp-action="GetAllCards" class="btn-cancel">Cancel</a>
                    <button type="submit" class="btn-delete">Delete Card</button>
                </div>
            </form>
        </div>
    </div>
</div>
