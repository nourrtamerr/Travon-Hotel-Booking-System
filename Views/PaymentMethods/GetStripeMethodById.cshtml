 @model MVCBookingFinal_YARAB_.Models.StripePaymentMethod

@{
    ViewData["Title"] = "Payment Method Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg" style="background-color: #f8f9fa; border: none;">
                <div class="card-header bg-primary text-white py-3">
                    <h2 class="text-center mb-0">Payment Method Details</h2>
                </div>
                <div class="card-body p-4">
                    <div class="card bg-white shadow-sm mb-4">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4 text-dark">
                                    @Html.DisplayNameFor(model => model.AccountNumber)
                                </dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-credit-card me-2"></i>
                                    @Html.DisplayFor(model => model.AccountNumber)
                                </dd>
                                <dt class="col-sm-4 text-dark">
                                    @Html.DisplayNameFor(model => model.PaymentType)
                                </dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-money-bill me-2"></i>
                                    @Html.DisplayFor(model => model.PaymentType)
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="form-group d-flex gap-2 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="GetAllStripe" class="btn btn-info text-white">
                            <i class="fas fa-arrow-left me-2"></i>Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn {
        padding: 8px 20px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
</style>

@section Scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
}