@{
    ViewData["Title"] = "Select Payment Method";


    if (User.IsInRole("ADMIN"))
    {
        Layout = "_AdminHome";
    }
}


<style>
    .payment-selection-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .payment-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .payment-title {
        color: #1a374d;
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .payment-subtitle {
        color: #6c757d;
        font-size: 16px;
        margin: 0;
    }

    .payment-options {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-bottom: 30px;
    }

    .payment-option {
        position: relative;
    }

    .payment-radio {
        display: none;
    }

    .payment-label {
        display: flex;
        align-items: center;
        padding: 20px;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
    }

    .payment-radio:checked + .payment-label {
        border-color: #1a374d;
        background: #f8f9fa;
    }

    .payment-icon {
        font-size: 24px;
        margin-right: 15px;
    }

        .payment-icon.stripe {
            color: #635bff;
        }

        .payment-icon.credit {
            color: #28a745;
        }

    .payment-text {
        font-size: 16px;
        font-weight: 500;
        color: #1a374d;
    }

    .payment-description {
        position: absolute;
        right: 20px;
        color: #6c757d;
        font-size: 14px;
    }

    .payment-submit {
        width: 100%;
        padding: 15px;
        background: #1a374d;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 500;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .payment-submit:hover {
            background: #142c3c;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(26, 55, 77, 0.2);
        }

    @@media (max-width: 768px) {
        .payment-selection-container {
            margin: 20px;
            padding: 20px;
        }

        .payment-description {
            display: none;
        }
    }
</style>

<div class="payment-selection-container">
    <div class="payment-header">
        <h1 class="payment-title">Choose Payment Method</h1>
        <p class="payment-subtitle">Select your preferred way to pay</p>
    </div>

    <form method="post" asp-action="RedirectToPaymentMethods" class="payment-form">
        <div class="payment-options">
            @foreach (var paymentType in ViewBag.PaymentTypes)
            {
                <div class="payment-option">
                    <input type="radio"
                           id="@paymentType.Value"
                           name="paymentType"
                           value="@paymentType.Value"
                           class="payment-radio" />
                    <label for="@paymentType.Value" class="payment-label">
                        @if (paymentType.Value.ToLower().Contains("stripe"))
                        {
                            <i class="fab fa-stripe payment-icon stripe"></i>
                            <span class="payment-text">Pay with Stripe</span>
                            <span class="payment-description">Fast and secure payment via Stripe</span>
                        }
                        else
                        {
                            <i class="fas fa-credit-card payment-icon credit"></i>
                            <span class="payment-text">Credit Card</span>
                            <span class="payment-description">Payments with  card</span>
                        }
                    </label>
                </div>
            }
        </div>

        <button type="submit" class="payment-submit">
            <i class="fas fa-lock"></i>
            Continue to Payment
        </button>
    </form>
</div>

