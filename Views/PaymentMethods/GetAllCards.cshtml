@model IEnumerable<MVCBookingFinal_YARAB_.Models.CardPaymentMethod>

@{
    ViewData["Title"] = "GetAllCards";
}

<div class="payments-container">
    <div class="header-section">
        <div class="header-content">
            <h1 class="page-title">Saved Payment Cards</h1>
            <p class="page-subtitle">Manage your saved payment methods</p>
        </div>
        <div class="header-actions">
            <a asp-action="CreateCard" class="create-btn">
                <i class="fas fa-plus"></i>
                Add New Card
            </a>
        </div>
    </div>

    <div class="table-container">
        <table class="payments-table table-striped">
            <thead>
                <tr>
                    <th>
                        <div class="th-content">
                            <i class="fas fa-credit-card th-icon"></i>
                            Card Number
                        </div>
                    </th>
                    <th>
                        <div class="th-content">
                            <i class="fas fa-calendar th-icon"></i>
                            Expiry Date
                        </div>
                    </th>
                    <th>
                        <div class="th-content">
                            <i class="fas fa-lock th-icon"></i>
                            CVV
                        </div>
                    </th>
                    <th>
                        <div class="th-content">
                            <i class="fas fa-tag th-icon"></i>
                            Type
                        </div>
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="card-number">
                                <i class="fas fa-credit-card"></i>
                                •••• •••• •••• @item.CardNumber.Substring(Math.Max(0, item.CardNumber.Length - 4))
                            </span>
                        </td>
                        <td>@item.ExpiryDate.ToString("MM/yyyy")</td>
                        <td>•••</td>
                        <td>
                            <span class="card-type">
                                <i class="fas fa-credit-card"></i>
                                Card
                            </span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="GetCardMethodById" asp-route-id="@item.Id" class="action-link">
                                    View
                                </a>
                                <span class="action-separator">•</span>
                                <a asp-action="DeleteCardMethod" asp-route-id="@item.Id" class="action-link delete">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="footer-actions">
        <a asp-action="Index" class="back-btn">
            <i class="fas fa-arrow-left"></i>
            Back to Payments
        </a>
    </div>
</div>

<style>
    .payments-container {
        background: white;
        padding: 0;
        margin: 20px 0;
    }

    .header-section {
        padding: 20px 0;
        margin-bottom: 20px;
    }

    .page-title {
        color: #1a374d;
        font-size: 24px;
        margin: 0;
    }

    .page-subtitle {
        color: #6c757d;
        margin: 5px 0 0;
        font-size: 14px;
    }

    .create-btn {
        background: #1a374d;
        color: white;
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .payments-table {
        width: 100%;
        border-collapse: collapse;
    }

        .payments-table th {
            text-align: left;
            padding: 12px 16px;
            font-weight: 500;
            color: #1a374d;
            border-bottom: 1px solid #dee2e6;
            font-size: 14px;
        }

        .payments-table td {
            padding: 16px;
            border-bottom: 1px solid #dee2e6;
            color: #333;
            font-size: 14px;
        }

    .card-number {
        color: #1a374d;
        font-family: monospace;
    }

    .card-type {
        color: #1a374d;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .action-buttons {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .action-link {
        color: #1a374d;
        text-decoration: none;
        font-size: 14px;
    }

        .action-link.delete {
            color: #dc3545;
        }

    .action-separator {
        color: #dee2e6;
    }

    .back-btn {
        color: #1a374d;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 14px;
        margin-top: 20px;
    }

    .footer-actions {
        padding: 20px 0;
        border-top: 1px solid #dee2e6;
    }

    .payments-table th {
        text-align: left;
        padding: 16px 20px;
        font-weight: 600;
        color: #1a374d;
        border-bottom: 1px solid #dee2e6;
        font-size: 15px;
        background: #f8f9fa;
    }

    .th-content {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .th-icon {
        color: #1a374d;
        font-size: 16px;
    }
</style>