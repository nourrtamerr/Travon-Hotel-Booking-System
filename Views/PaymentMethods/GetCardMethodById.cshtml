@model MVCBookingFinal_YARAB_.Models.CardPaymentMethod

@{
    ViewData["Title"] = "GetCardMethodById";
}

<div class="page-wrapper">


<div class="payments-container">
    <div class="header-section">
        <div class="header-content">
            <h1 class="page-title">Card Details</h1>
            <p class="page-subtitle">View your saved card information</p>
        </div>
    </div>

    <div class="card-details-container">
        <div class="card-preview">
            <div class="card-icon">
                <i class="fas fa-credit-card"></i>
            </div>
            <div class="card-info">
                <div class="info-group">
                    <label>Card Number</label>
                    <p class="card-number">•••• •••• •••• @Model.CardNumber.Substring(Math.Max(0, Model.CardNumber.Length - 4))</p>
                </div>
                <div class="info-row">
                    <div class="info-group">
                        <label>Expiry Date</label>
                        <p>@Model.ExpiryDate.ToString("MM/yyyy")</p>
                    </div>
                    <div class="info-group">
                        <label>CVV</label>
                        <p>•••</p>
                    </div>
                </div>
                <div class="info-group">
                    <label>Payment Type</label>
                    <p class="payment-type">
                        <i class="fas fa-credit-card"></i>
                        @Model.PaymentType
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-actions">
        <a asp-action="GetAllCards" class="back-btn">
            <i class="fas fa-arrow-left"></i>
            Back to Cards
        </a>
    </div>
</div>
</div>
