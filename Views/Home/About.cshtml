@{
    ViewData["Title"] = "About";
}

<style>
    .hero-about {
        background: linear-gradient(135deg, #1A374D 0%, #406882 100%);
        padding: 100px 0;
        color: white;
        position: relative;
        overflow: hidden;
    }
    
    .hero-about::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="%23ffffff" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>') repeat;
        opacity: 0.3;
    }
    
    .feature-card {
        background: white;
        border-radius: 20px;
        padding: 40px 30px;
        text-align: center;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        height: 100%;
    }
    
    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 60px rgba(0,0,0,0.15);
    }
    
    .feature-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #1A374D, #406882);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        color: white;
        font-size: 2rem;
    }
    
    .stats-section {
        background: #f8f9fa;
        padding: 80px 0;
    }
    
    .stat-item {
        text-align: center;
        padding: 20px;
    }
    
    .stat-number {
        font-size: 3rem;
        font-weight: bold;
        color: #1A374D;
        display: block;
    }
    
    .stat-label {
        color: #406882;
        font-size: 1.1rem;
        margin-top: 10px;
    }
    
    .section-title {
        color: #1A374D;
        font-weight: bold;
        margin-bottom: 20px;
    }
    
    .section-subtitle {
        color: #406882;
        font-size: 1.2rem;
        margin-bottom: 50px;
    }
</style>



<body class="home-page">


<!-- Hero Section -->
<div class="hero-about">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">About Travon</h1>
                <p class="lead mb-4">
                    Your trusted companion for discovering extraordinary destinations and creating unforgettable travel experiences around the world.
                </p>
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-plane me-3" style="font-size: 2rem;"></i>
                    <span class="h5 mb-0">Making travel dreams come true since 2020</span>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fa-solid fa-globe" style="font-size: 15rem; opacity: 0.2;"></i>
            </div>
        </div>
    </div>
</div>

