@model MVCBookingFinal_YARAB_.Models.City

@{
    ViewData["Title"] = "Delete";
    
    Layout = "_AdminHome";

}

<style>
    .delete-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .delete-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .delete-title {
        color: #1a374d;
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .delete-warning {
        color: #dc3545;
        font-size: 16px;
        margin: 0;
    }

    .details-content {
        display: flex;
        gap: 40px;
        align-items: flex-start;
    }

    .image-section {
        flex: 0 0 300px;
    }

        .image-section img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(0, 150, 255, 0.2);
        }

    .info-section {
        flex: 1;
    }

    .info-group {
        margin-bottom: 25px;
    }

        .info-group label {
            display: block;
            color: #1a374d;
            font-weight: 600;
            font-size: 16px;
            margin-bottom: 8px;
        }

        .info-group p {
            font-size: 18px;
            color: #333;
            margin: 0;
            padding: 12px;
            background: #f8f9fa;
            border-radius: 6px;
            border: 1px solid #e9ecef;
        }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn-delete, .btn-cancel {
        padding: 12px 24px;
        border-radius: 6px;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background: #c82333;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.2);
        }

    .btn-cancel {
        background: #f8f9fa;
        color: #666;
    }

        .btn-cancel:hover {
            background: #e9ecef;
            transform: translateY(-1px);
        }


    @@media (max-width: 768px) {
        .details-content {
            flex-direction: column;
        }

        .image-section {
            flex: 0 0 auto;
            width: 100%;
        }
    }
</style>

<div class="delete-container">
    <div class="delete-header">
        <h1 class="delete-title">Delete City</h1>
        <p class="delete-warning">Are you sure you want to delete this city?</p>
    </div>

    <div class="details-content">
        <div class="image-section">
            <img id="cityImage" src="~/ProductsImages/@Model.Image" alt="@Model.Name" />
        </div>

        <div class="info-section">
            <div class="info-group">
                <label>City Name</label>
                <p>@Model.Name</p>
            </div>

            <div class="info-group">
                <label>Country</label>
                <p>@Model.Country.Name</p>
            </div>

            <form asp-action="ConfirmDelete" class="delete-form">
                <input type="hidden" asp-for="Id" />
                <div class="action-buttons">
                    <button type="submit" class="btn-delete">
                        <i class="fas fa-trash"></i>
                        Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn-cancel">
                        <i class="fas fa-arrow-left"></i>
                        Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

