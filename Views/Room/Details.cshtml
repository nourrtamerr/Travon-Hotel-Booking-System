@model MVCBookingFinal_YARAB_.Models.Room

@{
    ViewData["Title"] = "Details";

}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hotel.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.roomType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.roomType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PricePerNight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PricePerNight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Floor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Floor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Images
        </dt>
        <dd class="col-sm-10">
            @foreach (var img in Model.Images)
            {
                <img src="~/ProductsImages/@img.Image"
                     data-src="@Url.Content("~/ProductsImages/" + img.Image)"
                     class="img-thumbnail img-clickable"
                     data-bs-toggle="modal"
                     data-bs-target="#imageModal"
                     style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%; cursor: pointer;" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<partial name="_modalPartial"></partial>
