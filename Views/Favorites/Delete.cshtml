@model MVCBookingFinal_YARAB_.Models.Favorite

@{
    ViewData["Title"] = "Delete Favorite";
}

<div class="d-flex justify-content-center align-items-center row vh-100 ">
    <div class="card shadow-lg "style="width:600px">
        <div class="card-header " style="background:#1A374D;">
            <h3 class=" text-white">Delete Favorite</h3>
        </div>
        <div class="card-body border-2 " >
            <h5 class=" text-center">Are you sure you want to delete this favorite?</h5>
            <hr />

          
            <table class="table table-bordered text-center">
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Hotel)

                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Hotel.Name)

                    </td>
                </tr>
               
            </table>
           
         
           

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex mt-3 justify-content-center">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

