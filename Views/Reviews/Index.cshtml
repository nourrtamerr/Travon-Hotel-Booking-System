<div class="container-fluid">
    <div class="row">


        @if (!User.IsInRole("ADMIN"))
        {
            <div class="col-md-3">
                @await Html.PartialAsync("_ProfileSidebar", Model)
            </div>



            <div class="col-md-9">
                @if (th is null || th.Count == 0)
                {
                    <div class="empty-message">
                        You have completed trips to make reviews on.
                    </div>
                }
                else
                {
                    <div class="payments-container">

                        <div class="table-container">
                            <table class="payments-table table-striped table-rounded" style="border: 1px solid #e9ecef;">
                                <thead>
                                    <tr>
                                        <th><div class="th-content"><i class="fas fa-hotel th-icon"></i> Reservation Id</div></th>
                                        <th><div class="th-content"><i class="fas fa-hotel th-icon"></i> Hotel</div></th>
                                        <th><div class="th-content"><i class="fas fa-hotel th-icon"></i> City</div></th>
                                        <th><div class="th-content"><i class="fas fa-calendar th-icon"></i> Check-in date</div></th>
                                        <th><div class="th-content"><i class="fas fa-calendar th-icon"></i> Check-out date</div></th>
                                        <th><div class="th-content"><i class="fas fa-calendar th-icon"></i> Review</div></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (th is not null)
                                    {
                                        
                                        @foreach (var item in th)
                                        {
                                            <tr>
                                                <td>@item.ReservationId</td>
                                                <td>@item.HotelName</td>
                                                <td>@item.CityName</td>
                                                <td>@item.CheckInDate</td>
                                                <td>@item.CheckOutDate</td>

                                               <td>
                                                    @if (item.UserReview != null && item.UserReview.isDeleted==false)
                                                    {
                                                        var desc = item.UserReview.Description ?? "";
                                                        var preview = desc.Length > 30 ? desc.Substring(0, 30) + "..." : desc;


                                                        <div class="d-flex align-items-center justify-content-between">
                                                            <span>@preview</span>
                                                            <span>
                                                                <a asp-action="Edit" asp-route-id="@item.UserReview.Id" class="btn btn-sm text-primary ms-2" title="Edit"><i class="fas fa-edit"></i></a>
                                                                <a asp-action="Delete" asp-route-id="@item.UserReview.Id" class="btn btn-sm text-danger ms-1" title="Delete"><i class="fas fa-trash"></i></a>
                                                            </span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="Create" asp-controller="Reviews" asp-route-id="@item.HotelId">Make Review</a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }

                                    else
                                    {
                                        <div class="empty-message">No reviewed hotels found</div>
                                    }

                                </tbody>
                            </table>
                        </div>

                    </div>
                }
            </div>



        }



        <div class="@(User.IsInRole("ADMIN") ? "col-md-12" : "col-md-9")">

            @if (!Model.Any())
            {
                <div class="empty-message">
                    You haven't made any reviews yet.
                </div>
            }

            else
            {

                <div class="payments-container">

                    <form method="get" class="search-bar-form mb-4" style="flex-grow:1; max-width: 600px;">
                        <div class="search-bar-wrapper">
                            <input type="text" name="Search" class="search-bar-input" placeholder="Search" value="Search" />
                            <button type="submit" class="search-bar-btn" aria-label="Search">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <div class="table-container">
                        <table class="payments-table table-striped table-rounded" style="border: 1px solid #e9ecef;">
                            <thead>
                                <tr>
                                    <th><div class="th-content"><i class="fas fa-hotel th-icon"></i> Hotel</div></th>
                                    <th><div class="th-content"><i class="fas fa-user th-icon"></i> User</div></th>
                                    <th><div class="th-content"><i class="fas fa-star th-icon"></i> Rating</div></th>
                                    <th><div class="th-content"><i class="fas fa-align-left th-icon"></i> Description</div></th>
                                    <th><div class="th-content"><i class="fas fa-calendar th-icon"></i> Review Date</div></th>
                                    <th><div class="th-content"><i class="fas fa-cog th-icon"></i> Actions</div></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Hotel.Name</td>
                                        <td>@item.User.UserName</td>
                                        <td>
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= item.Rating)
                                                {
                                                    <i class="fa-solid fa-star" style="color:darkgoldenrod"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa-regular fa-star"></i>
                                                }
                                            }
                                        </td>
                                        <td>@item.Description</td>
                                        <td>@item.ReviewDate.ToShortDateString()</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm text-info" title="Details"><i class="fas fa-eye"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm text-danger" title="Delete"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>


            }

        </div>

    </div>
</div>














