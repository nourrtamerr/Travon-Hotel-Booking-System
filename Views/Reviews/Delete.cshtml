@model MVCBookingFinal_YARAB_.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<style>
    .review-card {
        max-width: 600px;
        margin: 40px auto;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(26, 55, 77, 0.08);
        padding: 2.5rem 2rem 2rem 2rem;
    }
    .review-title {
        font-size: 2rem;
        font-weight: 700;
        color: #c0392b;
        margin-bottom: 1.5rem;
        text-align: center;
    }
    .review-subtitle {
        text-align: center;
        color: #1A374D;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
    }
    .review-details-table {
        width: 100%;
        margin-bottom: 2rem;
        border-radius: 12px;
        overflow: hidden;
        background: #f8f9fa;
    }
    .review-details-table th {
        background: #1a374d;
        color: #fff;
        font-weight: 600;
        padding: 0.8rem 1rem;
        text-align: left;
        font-size: 1rem;
    }
    .review-details-table td {
        background: #fff;
        color: #1A374D;
        padding: 0.8rem 1rem;
        font-size: 1rem;
        word-break: break-word;
    }
    .btn-delete {
        background: #c0392b;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 0.7rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        transition: background 0.2s, transform 0.2s;
        margin-right: 1rem;
    }
    .btn-delete:hover {
        background: #e74c3c;
        transform: translateY(-2px);
        color: #fff;
    }
    .btn-cancel {
        color: #1A374D;
        font-weight: 500;
        text-decoration: none;
        border-radius: 8px;
        padding: 0.7rem 2rem;
        background: #e9ecef;
        border: none;
        font-size: 1.1rem;
        transition: color 0.2s, background 0.2s;
    }
    .btn-cancel:hover {
        color: #406882;
        background: #f8f9fa;
        text-decoration: underline;
    }
</style>

<div class="review-card">
    <div class="review-title">Are you sure you want to delete this review?</div>
    @* <div class="review-subtitle">Are you sure you want to delete this review?</div> *@
    <table class="review-details-table">
        @* <thead> *@
        @*     <tr> *@
        @*         <th>Field</th> *@
        @*         <th>Value</th> *@
        @*     </tr> *@
        @* </thead> *@
        <tbody>
            <tr>
                <td>Hotel</td>
                <td>@ViewBag.Hotel</td>
            </tr>
            <tr>
                <td>Rating</td>
                <td>@Html.DisplayFor(model => model.Rating)</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>@Html.DisplayFor(model => model.Description)</td>
            </tr>
            <tr>
                <td>Review Date</td>
                <td>@Html.DisplayFor(model => model.ReviewDate)</td>
            </tr>
        </tbody>
    </table>
    <div class="text-center mt-4">
        <form asp-action="Delete" method="post" style="display:inline-block;">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn-delete">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn-cancel">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
